<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.message">
	<insert id="insertMessage" parameterType="MessageVO">
		<selectKey keyProperty="msNo" resultType="int" order="BEFORE">
			select MESSAGE_seq.nextval from dual
		</selectKey>
		insert into message(MS_NO,M_USERID,MS_TITLE,MS_CONTENT)
		values(#{msNo},#{mUserid},#{msTitle},#{msContent})
	</insert>
	<insert id="insertMessageMaga" parameterType="MessageMagaVO">		
		insert into messagemaga(MS_NO,M_USERID)
		values(#{msNo},#{mUserid})
	</insert>
	
</mapper>








