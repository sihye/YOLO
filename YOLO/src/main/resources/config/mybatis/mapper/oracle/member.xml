		</choose>
	</update>
	
	<select id="HostSelectPG" parameterType="SearchVO" resultType="hashmap">
		select *
		from
		(
		    select rownum as RNUM ,LIST.*
		    from
		    (
		        select * from operatorHostView 
		        <include refid="searchWhere"></include>
		        order by m_no desc
		    )LIST
		)
